{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "GuitarStore.Api",
      "Environment": "Development"
    }
  },
  "PostgresOptions": {
    "ConnectionString": "User ID=postgres;Password=123;Host=localhost;Port=5432;Database=guitarstoredb",
    "UseInMemory": true
  },
  "RedisOptions": {
    "ConnectionString": "localhost:6379",
    "UseInMemory": true
  },
  "HangfireOptions": {
    "OutboxSchedule": "0/5 * * * * *"  
  },
  "KeycloakOptions": {
    "AuthorizationUrl": "http://localhost:18080/realms/demo/protocol/openid-connect/auth",
    "HealthUrl": "http://keycloak:8080/health"
  },
  "JwtOptions": {
    "Audience": "account",
    "MetadataAddress": "http://localhost:18080/realms/demo/.well-known/openid-configuration", 
    "ValidIssuer": ["http://localhost:18080/realms/demo", "http://keycloak:8080/realms/demo"]
  },
  "AllowedHosts": "*"
}
